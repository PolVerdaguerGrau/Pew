<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pol.pew.Controls">
        <ImageView
            android:id="@+id/background"
            android:layout_width="585dp"
            android:layout_height="698dp"
            android:layout_gravity="center"
            android:src="@drawable/background"
            android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/swipetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:src="@drawable/swipetop"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
        android:src="@drawable/fire"
        android:layout_toEndOf="@+id/swipetop"
        android:layout_toRightOf="@+id/swipetop"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/ship"
        android:layout_centerHorizontal="true" />

    <ImageView
            android:id="@+id/swiperight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        android:src="@drawable/swiperight"
        android:layout_below="@+id/swipetop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/mussol"
        android:layout_toEndOf="@+id/swipetop"
        android:layout_toRightOf="@+id/swipetop"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/back"
        android:layout_alignEnd="@+id/back" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="help"
        android:src="@drawable/back"
        android:layout_alignBottom="@+id/background"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="train"
        android:src="@drawable/training"
        android:layout_above="@+id/back"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/ship"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="345dp" />



</RelativeLayout>
